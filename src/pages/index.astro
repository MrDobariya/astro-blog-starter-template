---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="home">
      <!-- HERO (Apple-ish: centered, big, light background) -->
      <section class="hero">
        <div class="hero-inner">
          <p class="kicker">BabyVitta</p>
          <h1>Smarter baby picks.</h1>
          <p class="subhead">Less stress for new parents.</p>

          <div class="actions">
            <a class="btn primary" href="/blog/">Read the Blog</a>
            <a class="btn" href="/about/">About BabyVitta</a>
          </div>
        </div>

        <div class="hero-media">
          <img src="/images/hero/hero.png" alt="Newborn essentials and a parent holding a baby" />
        </div>
      </section>

      <!-- FULL-WIDTH SECTIONS (Apple style) -->
      <section class="feature">
        <div class="feature-copy">
          <p class="kicker">Feeding</p>
          <h2>Baby Bottles</h2>
          <p>Anti-colic picks, easy-clean options, and best value — no fluff.</p>
          <a class="link" href="/blog/best-baby-bottles/">Read guide &rarr;</a>
        </div>

        <div class="feature-media">
          <img src="/images/products/bottles.png" alt="Baby bottles" />
        </div>
      </section>

      <section class="feature reverse">
        <div class="feature-copy">
          <p class="kicker">Sleep</p>
          <h2>Baby Monitors</h2>
          <p>Clear video, secure connections, and simple setup you&#39;ll actually use.</p>
          <a class="link" href="/blog/">Explore &rarr;</a>
        </div>

        <div class="feature-media">
          <img src="/images/products/monitor.png" alt="Baby monitor" />
        </div>
      </section>

      <section class="feature">
        <div class="feature-copy">
          <p class="kicker">On the go</p>
          <h2>Strollers</h2>
          <p>Comfort, safety, and everyday usability — without overspending.</p>
          <a class="link" href="/blog/">Explore &rarr;</a>
        </div>

        <div class="feature-media">
          <img src="/images/products/stroller.png" alt="Stroller" />
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>

<style>
  :global(body){
    background: #f5f5f7; /* Apple-like */
  }

  .home{
    max-width: 1180px;
    margin: 0 auto;
    padding: 2.5rem 1.25rem 5rem;
  }

  .kicker{
    letter-spacing: .18em;
    text-transform: uppercase;
    font-size: .75rem;
    opacity: .65;
    margin: 0 0 .75rem;
  }

  /* HERO */
  .hero{
    border-radius: 32px;
    background: #fff;
    overflow: hidden;
    border: 1px solid rgba(0,0,0,.08);
    margin-bottom: 1.5rem;
  }

  .hero-inner{
    padding: 4.25rem 2.5rem 2rem;
    text-align: center;
  }

  .hero-inner h1{
    font-size: clamp(2.7rem, 6vw, 4.3rem);
    line-height: 1.05;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .subhead{
    font-size: 1.25rem;
    opacity: .8;
    margin: 1rem auto 1.7rem;
    max-width: 52ch;
  }

  .actions{
    display:flex;
    gap:.75rem;
    justify-content:center;
    flex-wrap:wrap;
  }

  .btn{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    padding:.85rem 1.2rem;
    border-radius: 999px;
    border: 1px solid rgba(0,0,0,.14);
    text-decoration:none;
    font-weight: 600;
    background:#fff;
    color:#000;
  }

  .btn.primary{
    background:#000;
    color:#fff;
    border-color:#000;
  }

  .hero-media{
    padding: 0 2.5rem 2.5rem;
  }

  .hero-media img{
    width:100%;
    height:auto;
    display:block;
    border-radius: 26px;
    box-shadow: 0 24px 70px rgba(0,0,0,.12);
  }

  /* FEATURES */
  .feature{
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items:center;
    padding: 2.2rem;
    border-radius: 32px;
    border: 1px solid rgba(0,0,0,.08);
    background:#fff;
    margin-top: 1.25rem;
  }

  .feature.reverse .feature-copy{ order: 2; }
  .feature.reverse .feature-media{ order: 1; }

  .feature-copy h2{
    font-size: clamp(1.9rem, 3.2vw, 2.5rem);
    margin: 0 0 .75rem;
    letter-spacing: -0.015em;
  }

  .feature-copy p{
    margin: 0 0 1rem;
    opacity: .8;
    max-width: 52ch;
    line-height: 1.55;
  }

  .link{
    font-weight: 700;
    text-decoration: none;
    color: #000;
  }

  .link:hover{
    text-decoration: underline;
  }

  .feature-media{
    border-radius: 24px;
    overflow:hidden;
    background: rgba(0,0,0,.02);
  }

  .feature-media img{
    width:100%;
    height: 360px;
    object-fit: cover;
    display:block;
  }

  @media (max-width: 900px){
    .home{ padding: 1.75rem 1rem 4rem; }
    .hero-inner{ padding: 3rem 1.25rem 1.25rem; }
    .hero-media{ padding: 0 1.25rem 1.25rem; }

    .feature{
      grid-template-columns: 1fr;
      padding: 1.25rem;
    }

    .feature.reverse .feature-copy,
    .feature.reverse .feature-media{
      order: initial;
    }

    .feature-media img{ height: 300px; }
  }
</style>
